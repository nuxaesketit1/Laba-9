#include <iostream>
#include <cmath>
using namespace std;
using std::cout;
int main() {

	setlocale(0, "");

	int N;

	do {

		cout << "Введите количество учебных заданий : ";
		cin >> N;
		cout << endl;

		string Hundred[10]{
			"","Сто ","Двести ","Триста ","Четыреста ","Пятьсот ","Шестьсот ","Семьсот ","Восемьсот ","Девятьсот "
		};

		string Ten[10]{
			"десять.","одинадцать.","двенадцать.","тринадцать.","четырнадцать.","пятнадцать.","шестнадцать.","семнадцать.","восемнадцать.","девятнадцать."
		};

		string Dozens[10]{
			"","","двадцать ","тридцать ","сорок ","пятьдесят ","шестьдесят ","семьдесят ","восемьдесят ","девяносто "
		};

		string Units[10]{
			"","один.","два.","три.","четыре.","пять.","шесть.","семь.","восемь.","девять."
		};

		if ((N > 99) && (N < 1000)) {

			cout << N << " - " << Hundred[N / 100];

			if ((N % 100) / 10 == 1) {

				cout << Ten[(N % 100) % 10] << endl;
				break;

			}
			else
			{
				cout << Dozens[(N % 100) / 10] << Units[N % 10] << endl;
				break;
			}

		}
		else
		{
			cout << "Повторите попытку!" << endl;
		}

	} while (true);

	cout << endl;

	system("pause");

	return 0;

}
